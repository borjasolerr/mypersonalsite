---
permalink: "blog/index.html"
translationKey: "blogpage"
---

{% extends "layouts/base.njk" %}

{% block content %}

  <h2 style="margin-top: 16px">Blogposts archive</h2>
  {% for post in collections.posts_en %}
    {% if loop.first %}<ul>{% endif %}
      <li style="padding: 0">

        <article class="article-view">
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <p class="timemargintop"><time class="time-margin" datetime="{{ post.date | date('Y-MM-DD') }}">{{ post.date | date("MMMM[,] Y", locale) }}</time></p>
        </article>

      </li>

    {% if loop.last %}</ul>{% endif %}
  {% endfor %}

{% endblock %}
